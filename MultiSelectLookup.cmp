<aura:component controller="MultiSelectLookupHelper" >
    <aura:attribute name="objectName" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.doinit}"/>
    <aura:attribute name="fieldList" type="List" />
    <aura:attribute name="recordList" type="List" />
    <aura:attribute name="iterableList" type="List" />
    <aura:attribute name="selectedList" type="List" />
    
    <div style="margin:2%">
        <lightning:card footer="" title="">
            
            <lightning:select name="select1" label="Accounts Name" required="false" onchange="{!c.onChange}">
                <option value="">choose one...</option>
                <aura:iteration items="{!v.iterableList}" var="records" indexVar="index">
                     <option data-row-index="{!index}" value="{!records.Name}">{!records.Name}</option>
                </aura:iteration>
            </lightning:select>
            
            <aura:iteration items="{!v.selectedList}" var="records">
                <lightning:card variant="Narrow" title="{!records}" iconName="standard:account" footer="">
                    <aura:set attribute="actions">
                        <lightning:buttonIcon value="{!records}" iconName="utility:close" variant="" alternativeText="Close" onclick="{! c.remove }"/>
                    </aura:set>
                    <p class="slds-p-horizontal_small">
                    </p>
                </lightning:card>


            </aura:iteration>
            
        </lightning:card>
    </div>
</aura:component>
